#myCarousel.carousel.slide{"data-ride" => "carousel"}
  / Indicators
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
  .carousel-inner{:role => "listbox"}
    .item.active
      %img.first-slide.img-responsive.hidden-xs{:alt => "First slide", :src => "/carousel_2.jpg"}
      %img.second-slide.img-responsive.visible-xs{:alt => "Second slide", :src => "/500_4.jpg"}
      .container
        .carousel-caption
          %h1 We buy all musical instruments and equipment in NYC.
          %p
            Call or text us right now for more info. If you are looking to get top dollar for your items, you are on the right page.
          %p
            %a.btn.btn-lg.btn-primary{:href => "tel:7188461600", :role => "button"}
              %i.fa.fa-phone
              718 846 1600
    .item
      %img.second-slide.img-responsive.hidden-xs{:alt => "Second slide", :src => "/carousel_1.jpg"}
      %img.second-slide.img-responsive.visible-xs{:alt => "Second slide", :src => "/500_1.jpg"}
      .container
        .carousel-caption
          %h1 We buy electric guitars and basses in New York City.
          %p
            We know everything about electric guitars and basses. So just bring one you want to sell and get your best deal.
            Cash on the spot.
          %p
            %a.btn.btn-lg.btn-primary{:href => "tel:7188461600", :role => "button"}
              %i.fa.fa-phone
              718 846 1600
    .item
      %img.third-slide.img-responsive.hidden-xs{:alt => "Third slide", :src => "/carousel_3.jpg"}
      %img.second-slide.img-responsive.visible-xs{:alt => "Second slide", :src => "/500_3.jpg"}
      .container
        .carousel-caption
          %h1 We buy all kinds of musical instruments and equipment.
          %p
            We always pay more. Do not waste your time, call us right now.
          %p
            %a.btn.btn-lg.btn-primary{:href => "tel:7188461600", :role => "button"}
              %i.fa.fa-phone
              718 846 1600
  %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
    %span.sr-only Next
    / /.carousel
